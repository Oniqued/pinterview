<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyeongchang_bold"
        android:gravity="center"
        android:text="Practice Interview"
        android:textColor="@color/green"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@id/textview_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textview_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/pyeongchang_bold"
        android:text="PI"
        android:textColor="@color/green"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@id/textview_start"
        app:layout_constraintEnd_toEndOf="@id/textview_name"
        app:layout_constraintStart_toStartOf="@id/textview_name"
        app:layout_constraintTop_toBottomOf="@id/textview_name" />


    <TextView
        android:id="@+id/textview_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/pyeongchang_bold"
        android:text="시작하기"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingVertical="15dp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rectangle_green_26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>